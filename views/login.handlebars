<h2>Login</h2>

<form class="mx-3 mt-3 p-4 border border-secondary rounded login-form text-center">
  <div class="form-group row">
    <div class="col">
       <label for="email-login" class="col-sm-2 col-form-label">Email</label>
    <input class="form-input" type="text" id="email-login" />
    </div>
  </div>

  <div class="form-group row">
    <div class="col my-2">
      <label for="password-login" class="col-sm-2 col-form-label">Password</label>
    <input class="form-input" type="password" id="password-login" />
    </div>
    
  </div>
  <div class="form-group row">
    <div class="col ">
       <button class="btn btn-secondary px-3 w-15" type="submit">Login</button>
    </div>
     
    
    
  </div>
</form>

<script src="/js/login.js"></script>
